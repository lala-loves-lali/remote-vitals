<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.remote_vitals.SimpleController" style="-fx-background-color: white;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="JavaFX Test Application" style="-fx-text-fill: #2c3e50;">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    
    <Label fx:id="messageLabel" text="Welcome to JavaFX" style="-fx-text-fill: #7f8c8d;">
        <font>
            <Font size="16.0" />
        </font>
    </Label>
    
    <Button fx:id="testButton" onAction="#handleButtonClick" text="Click Me" style="-fx-background-color: #3498db; -fx-text-fill: white;">
        <font>
            <Font size="14.0" />
        </font>
    </Button>
    
    <TextArea fx:id="infoTextArea" editable="false" prefHeight="200.0" prefWidth="400.0" wrapText="true" 
              style="-fx-font-family: monospace; -fx-font-size: 12px;">
    </TextArea>
</VBox> 